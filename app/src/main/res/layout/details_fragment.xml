<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#c0c0c0c0"

    android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.91"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:id="@+id/product_image"
        android:src="@drawable/default_avatar"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="0.8"
       android:text="Price"
       android:textColor="@color/black"
       android:id="@+id/product_price"
       android:textSize="18dp"
       />
</LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"

     android:layout_weight="1.25"></LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.8"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="title"
    android:textColor="@color/black"
    android:textSize="18dp"
    android:textStyle="bold"
    android:id="@+id/product_title"
    android:layout_weight="1.1"
    />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1.6"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="titletitletitletitletitletitletitletitletitletitletitletitletitletitletitle"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:id="@+id/description"
        android:layout_weight="0.8"
        />
</LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1.25"></LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_weight="1.05">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Available Size"
        android:textSize="21dp"
        android:textColor="@color/black"
        android:layout_weight="1.9"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1.4"
      android:orientation="horizontal">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="20"
          android:gravity="center"
          android:background="@drawable/text_bg"
          android:textSize="14dp"
          android:layout_weight="0.9"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="20"
          android:gravity="center"
          android:background="@drawable/text_bg"
          android:textSize="14dp"
          android:layout_weight="0.9"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="20"
          android:gravity="center"
          android:background="@drawable/text_bg"
          android:textSize="14dp"
          android:layout_weight="0.9"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="20"
          android:gravity="center"
          android:background="@drawable/text_bg"
          android:textSize="14dp"
          android:layout_weight="0.9"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="20"
          android:gravity="center"
          android:background="@drawable/text_bg"
          android:textSize="14dp"
          android:layout_weight="0.9"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
  </LinearLayout>



</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.1">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"/>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_cart"
    android:src="@drawable/addtocart_btn"
    android:layout_weight="0.4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
</LinearLayout>
